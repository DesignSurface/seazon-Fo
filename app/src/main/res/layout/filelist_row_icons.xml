<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="96dp"
    android:layout_height="wrap_content"
	style="@style/colorBackgroundSection"
	android:paddingRight="1dp"
	android:paddingBottom="1dp"
    >
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	style="@style/colorBackground"
    >
<RelativeLayout
    android:id="@+id/bgLayout"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    >

	<ImageView
		android:id="@+id/img"
        android:layout_width="48dp"
        android:layout_height="48dp"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="4dp"
	    android:scaleType="centerCrop"
	    android:src="@drawable/format_file"
        />
	
	<TextView 
		android:id="@+id/name"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:layout_below="@id/img"
	    android:layout_centerHorizontal="true"
	    android:textSize="14sp"
	    android:lines="2"
	    android:ellipsize="end"
	    android:layout_margin="4dp"
	    android:drawablePadding="0.0dp"
        android:text="this is file ngame this is fgile name this is file name this is file name this is file name "
        style="@style/textPrimary"
	    />
	    
	<ImageView
		android:id="@+id/select"
		android:layout_width="match_parent"
        android:layout_height="match_parent"
		/>

</RelativeLayout>
</LinearLayout>
</LinearLayout>